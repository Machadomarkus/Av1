<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>informacoes</servlet-name>
        <servlet-class>com.controller.informacoes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciadorConexoes</servlet-name>
        <servlet-class>com.controller.GerenciadorConexoes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioDAO</servlet-name>
        <servlet-class>com.controller.UsuarioDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuario</servlet-name>
        <servlet-class>com.controller.usuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>informacoes</servlet-name>
        <url-pattern>/informacoes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciadorConexoes</servlet-name>
        <url-pattern>/GerenciadorConexoes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioDAO</servlet-name>
        <url-pattern>/UsuarioDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuario</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
